<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hyt.server.mapper.base.IUnitBridgeMapper" >
  <resultMap id="BaseResultMap" type="com.hyt.server.entity.base.UnitBridge" >
    <result column="id" property="id" jdbcType="VARCHAR" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="type" property="type" jdbcType="VARCHAR" />
    <result column="address" property="address" jdbcType="VARCHAR" />
    <result column="length" property="length" jdbcType="VARCHAR" />
    <result column="build_time" property="buildTime" jdbcType="TIMESTAMP" />
    <result column="district" property="district" jdbcType="VARCHAR" />
    <result column="lon" property="lon" jdbcType="DOUBLE" />
    <result column="lat" property="lat" jdbcType="DOUBLE" />
    <result column="unit" property="unit" jdbcType="VARCHAR" />
    <result column="principal" property="principal" jdbcType="VARCHAR" />
    <result column="phone" property="phone" jdbcType="VARCHAR" />
    <result column="description" property="description" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, name, type, address, length, build_time, district, lon, lat, unit, principal, 
    phone, description
  </sql>
  <!-- 查询桥梁信息 -->
  <select id="findAll" resultMap="BaseResultMap">
    SELECT
    *
    FROM
    base_unit_bridge
    where 1=1
    <if test="id != null and id != ''">AND id = #{id}</if>
    <if test="name != null and name != ''">AND name = #{name} </if>
    <choose>
      <when test="sortName !=null and sortName!='id'">
        ORDER BY ${sortName} ${sortOrder}
      </when >
      <otherwise>
        ORDER BY id DESC
      </otherwise>
    </choose>
  </select>
</mapper>