<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hyt.server.mapper.sys.IUserMapper">
    <resultMap id="BaseResultMap" type="com.hyt.server.entity.sys.User">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="login_name" jdbcType="VARCHAR" property="loginName"/>
        <result column="login_password" jdbcType="VARCHAR" property="loginPassword"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="phone" jdbcType="VARCHAR" property="phone"/>
        <result column="sex" jdbcType="SMALLINT" property="sex"/>
        <result column="area_id" jdbcType="VARCHAR" property="areaId"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, login_name, login_password, name, phone, sex, area_id, create_time
    </sql>

    <!-- 查询所有用户信息 -->
    <select id="findAll" resultMap="BaseResultMap">
        select
          <include refid="Base_Column_List"/>
        FROM user u where 1=1
        <if test="areaId != null">and area_id = #{areaId}</if>
        <if test="loginName != null">AND login_name LIKE '${loginName}%'</if>
        <if test="name != null">AND name like '${name}%'</if>
        <choose>
            <when test="sortName !=null and sortName!='id'">
                ORDER BY ${sortName} ${sortOrder}
            </when >
            <otherwise>
                ORDER BY create_time ${sortOrder}
            </otherwise>
        </choose>
    </select>

    <!-- 用户登录信息 -->
    <select id="login" parameterType="map" resultType="com.hyt.server.entity.sys.User">
        select
        <include refid="Base_Column_List"/>
        FROM user u where 1=1
        <if test="loginName != null">
            AND login_name = #{loginName}
        </if>
        <if test="loginPassword != null">
            AND login_password = #{loginPassword}
        </if>
    </select>

</mapper>